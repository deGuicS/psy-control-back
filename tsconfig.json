{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Adiciona suporte para módulos ES6
    "allowSyntheticDefaultImports": true, // Permite importar módulos CommonJS como default
    "paths": {
      "@/*": ["*"]
    }
  }
}
