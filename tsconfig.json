{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Adiciona suporte para módulos ES6
    "allowSyntheticDefaultImports": true, // Permite importar módulos CommonJS como default
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  }
}
